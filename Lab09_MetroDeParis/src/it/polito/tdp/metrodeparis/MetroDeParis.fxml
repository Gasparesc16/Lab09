<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="it.polito.tdp.metrodeparis.MetroDeParisController">
   <top>
      <Label text="Lab9_MetroParis" BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Seleziona una stazione di Partenza:">
               <padding>
                  <Insets bottom="5.0" />
               </padding>
            </Label>
            <ComboBox fx:id="cmbPartenza" />
            <Label text="Seleziona una stazione di Arrivo:">
               <padding>
                  <Insets bottom="5.0" />
               </padding>
            </Label>
            <ComboBox fx:id="cmbArrivo" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <right>
      <Button mnemonicParsing="false" onAction="#doCalcolaPercorso" text="Calcola percorso" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </Button>
   </right>
   <bottom>
      <TextArea fx:id="txtResult" editable="false" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="5.0" />
         </padding>
      </TextArea>
   </bottom>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
